{% extends 'user.html.twig' %}

{% block title %} Add New Post{% endblock %}

{% block body %}
    <div class="col-md-12 ">
        <h1>Add New Post</h1>
        <small>Here you can add new post in some of available categories.</small>
        <hr>
        <a href="/user/posts" class="btn btn-warning pull-right">Cancel</a>

        <br><br>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}

    </div>
{% endblock %}