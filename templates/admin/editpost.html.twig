{% extends 'admin.html.twig' %}

{% block title %} Edit Post{% endblock %}

{% block body %}
    <style>
    </style>

    <div class="col-md-12 ">
        <h1>Edit Post</h1>
        <hr>
        <a href="/admin/allposts" class="btn btn-warning">Cancel</a>

        <form action="/admin/deletepost" method="post">
            <button style="margin-top:-32px" class="btn btn-danger pull-right" name="post_id" value="{{ post_id }}">Delete Post</button>
        </form>

        <br><br>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}

    </div>
{% endblock %}