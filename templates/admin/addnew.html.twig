{% extends 'admin.html.twig' %}

{% block title %} {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
    </style>

    <div class="col-md-12 ">
        <h1>Add New Post</h1>
        <small>Section for adding new post.</small>
        <hr>
        <a href="/admin/allposts" class="btn btn-warning pull-right">Cancel</a>

        <br><br>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}

    </div>
{% endblock %}